root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JS-Files
[*.{js,mjs}]
indent_size = 2

# JSON-Files
[*.json]
indent_style = tab

# YAML-Files
[*.{yaml,yml}]
indent_size = 2

# XLF-Files
[*.xlf]
indent_style = tab

# NEON-Files
[*.neon]
indent_size = 2
indent_style = tab
